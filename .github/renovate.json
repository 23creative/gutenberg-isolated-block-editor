{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [ "config:base" ],
	"enabledManagers": [ "npm" ],
	"lockFileMaintenance": {
		"enabled": false
	},
	"packageRules": [
		{
			"matchPackagePatterns": [ "*" ],
			"enabled": false
		},
		{
			"matchPackagePatterns": [ "^@wordpress" ],
			"enabled": true,
			"matchDepTypes": [ "dependencies" ],
			"separateMajorMinor": false
		}
	]
}
